{
  "openapi": "3.0.2",
  "info": {
    "version": "1.0.0",
    "title": "Contacts API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "Це API для керування контактами. Підтримує авторизацію, повний CRUD функціонал, аватарки і email розсилку.\n"
  },
  "servers": [
    {
      "url": "https://nodejs-hw-mongodb-c8vq.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Операції з контактами"
    }
  ],
  "paths": {
    "/contacts": {
      "get": {
        "get": {
          "tags": [
            "Contacts"
          ],
          "summary": "Отримати всі контакти",
          "operationId": "getAllContacts",
          "description": "Повертає список всіх контактів, підтримує фільтрацію за параметрами запиту.",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "favorite",
              "in": "query",
              "description": "Фільтр за улюбленими контактами (true або false)",
              "required": false,
              "schema": {
                "type": "boolean"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Список контактів успішно отримано"
            }
          }
        }
      },
      "post": {
        "post": {
          "tags": [
            "Contacts"
          ],
          "summary": "Додати новий контакт",
          "operationId": "createContact",
          "description": "Створює новий контакт з переданими даними.",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "description": "Дані нового контакту",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "name",
                    "email",
                    "phone"
                  ],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "phone": {
                      "type": "string"
                    },
                    "favorite": {
                      "type": "boolean"
                    }
                  },
                  "example": {
                    "name": "John Doe",
                    "email": "john.doe@example.com",
                    "phone": "+123456789",
                    "favorite": false
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Контакт успішно створено"
            },
            "400": {
              "description": "Некоректні дані запиту"
            }
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "get": {
          "tags": [
            "Contacts"
          ],
          "summary": "Отримати контакт за ID",
          "operationId": "getContactById",
          "description": "Повертає один контакт за його унікальним ідентифікатором.",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "contactId",
              "in": "path",
              "required": true,
              "description": "Ідентифікатор контакту",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Контакт знайдено"
            },
            "404": {
              "description": "Контакт не знайдено"
            }
          }
        }
      },
      "patch": {
        "patch": {
          "tags": [
            "Contacts"
          ],
          "summary": "Оновити контакт за ID",
          "operationId": "updateContactById",
          "description": "Оновлює дані контакту за його унікальним ідентифікатором.",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "contactId",
              "in": "path",
              "required": true,
              "description": "Ідентифікатор контакту",
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "description": "Поля для оновлення контакту",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "phone": {
                      "type": "string"
                    },
                    "favorite": {
                      "type": "boolean"
                    }
                  },
                  "example": {
                    "name": "Updated Name",
                    "email": "updated@example.com",
                    "phone": "+123456789",
                    "favorite": true
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Контакт успішно оновлено"
            },
            "404": {
              "description": "Контакт не знайдено"
            }
          }
        }
      },
      "delete": {
        "delete": {
          "tags": [
            "Contacts"
          ],
          "summary": "Видалити контакт за ID",
          "operationId": "deleteContactById",
          "description": "Видаляє контакт за його унікальним ідентифікатором.",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "contactId",
              "in": "path",
              "required": true,
              "description": "Ідентифікатор контакту",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Контакт успішно видалено"
            },
            "404": {
              "description": "Контакт не знайдено"
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}