{
  "openapi": "3.0.2",
  "info": {
    "version": "1.0.0",
    "title": "Contacts API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "Це API для керування контактами. Підтримує авторизацію, повний CRUD функціонал, аватарки і email розсилку.\n"
  },
  "servers": [
    {
      "url": "https://nodejs-hw-mongodb-c8vq.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Операції з контактами"
    }
  ],
  "paths": {
    "/contacts": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Отримати всі контакти",
        "operationId": "getAllContacts",
        "description": "Повертає список всіх контактів, підтримує фільтрацію за параметрами запиту.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "favorite",
            "in": "query",
            "description": "Фільтр за улюбленими контактами (true або false)",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Список контактів успішно отримано",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found contacts!"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Contact"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Неавторизований"
          },
          "500": {
            "description": "Внутрішня помилка сервера"
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Додати новий контакт",
        "operationId": "createContact",
        "description": "Створює новий контакт з переданими даними.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Дані нового контакту",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "phone"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "favorite": {
                    "type": "boolean"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "john.doe@example.com",
                  "phone": "+123456789",
                  "favorite": false
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Контакт успішно створено",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully created contact!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Contact"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Некоректні дані запиту"
          },
          "401": {
            "description": "Неавторизований"
          },
          "500": {
            "description": "Внутрішня помилка сервера"
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Отримати контакт за ID",
        "operationId": "getContactById",
        "description": "Повертає один контакт за його унікальним ідентифікатором.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "required": true,
            "description": "Ідентифікатор контакту",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Контакт знайдено",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found contact!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Contact"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Неавторизований"
          },
          "404": {
            "description": "Контакт не знайдено"
          },
          "500": {
            "description": "Внутрішня помилка сервера"
          }
        }
      },
      "patch": {
        "tags": [
          "Contacts"
        ],
        "summary": "Оновити контакт за ID",
        "operationId": "updateContactById",
        "description": "Оновлює дані контакту за його унікальним ідентифікатором.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "required": true,
            "description": "Ідентифікатор контакту",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Поля для оновлення контакту",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "favorite": {
                    "type": "boolean"
                  }
                },
                "example": {
                  "name": "Updated Name",
                  "email": "updated@example.com",
                  "phone": "+123456789",
                  "favorite": true
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Контакт успішно оновлено",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully updated contact!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Contact"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Некоректні дані запиту"
          },
          "401": {
            "description": "Неавторизований"
          },
          "404": {
            "description": "Контакт не знайдено"
          },
          "500": {
            "description": "Внутрішня помилка сервера"
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Видалити контакт за ID",
        "operationId": "deleteContactById",
        "description": "Видаляє контакт за його унікальним ідентифікатором.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "required": true,
            "description": "Ідентифікатор контакту",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Контакт успішно видалено",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully deleted contact!"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Неавторизований"
          },
          "404": {
            "description": "Контакт не знайдено"
          },
          "500": {
            "description": "Внутрішня помилка сервера"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "Contact": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Унікальний ідентифікатор контакту",
            "example": "64a7f4c2e1234567890abcd1"
          },
          "name": {
            "type": "string",
            "description": "Ім'я контакту",
            "example": "John Doe"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Телефонний номер контакту",
            "example": "+1234567890"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Електронна пошта контакту",
            "example": "john.doe@example.com"
          },
          "isFavourite": {
            "type": "boolean",
            "description": "Чи є контакт улюбленим",
            "example": false
          },
          "contactType": {
            "type": "string",
            "description": "Тип контакту",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "work"
          },
          "userId": {
            "type": "string",
            "description": "Ідентифікатор користувача-власника контакту",
            "example": "64a7f4c2e1234567890abcd2"
          },
          "photo": {
            "type": "string",
            "description": "URL фотографії контакту",
            "example": "https://example.com/photos/contact1.jpg"
          }
        },
        "required": [
          "name",
          "phoneNumber",
          "contactType",
          "userId"
        ]
      }
    }
  }
}